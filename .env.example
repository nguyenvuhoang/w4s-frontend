# -----------------------------------------------------------------------------
# Configuration Example
# Sao chép file này thành .env và điền thông tin thật vào
# -----------------------------------------------------------------------------

# App
NEXT_PUBLIC_APPLICATION_TITLE=EMI DIGITAL BANKING
NEXT_PUBLIC_APPLICATION_CODE=BO
NEXT_PUBLIC_ENVIRONMENT=Production

# Server URLs
APP_HOST=https://your-domain.com
API_HOST=https://api.your-domain.com
REPORT_HOST=https://report.your-domain.com

# Auto-generated URLs (thường không cần sửa)
NEXT_PUBLIC_APP_URL=${APP_HOST}
NEXT_PUBLIC_DOCS_URL=${APP_HOST}/documentation

# Authentication
NEXTAUTH_BASEPATH=/api/auth
NEXTAUTH_URL=${APP_HOST}/api/auth
# Tạo bằng lệnh: openssl rand -base64 32
NEXTAUTH_SECRET=changeme_secret_key_here
NEXTAUTH_TRUST_HOST=true

# Database
DATABASE_URL=file:./dev.db

# API Config
API_URL=${APP_HOST}/api
NEXT_PUBLIC_API_URL=${APP_HOST}/api

NEXT_PUBLIC_REST_API_ENDPOINT=${API_HOST}/api/Webchannel/Post
NEXT_PUBLIC_REST_API_CDN_ENDPOINT=${API_HOST}/api/Webchannel/UploadFile/upload
NEXT_PUBLIC_IMAGE_API_ENDPOINT=${API_HOST}/img/
NEXT_PUBLIC_REST_API_PORTAL_ENDPOINT=${API_HOST}/api/WebPortal/Post
NEXT_PUBLIC_SIGNALR=${API_HOST}/signal

# Others
NEXT_PUBLIC_IDLETIMEOUT=500000
NEXT_PUBLIC_REPORT_URI=${REPORT_HOST}/View/Reports
NEXT_TELEMETRY_DEBUG=1
ALLOW_INSECURE_REPORT_SSL=true

# Turnstile CAPTCHA
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_site_key_here
TURNSTILE_SECRET=your_secret_key_here

# Encryption
NEXT_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here
NEXT_PUBLIC_HMAC_SECRET=your_hmac_secret_here
ENCRYPTION_KEY=your_encryption_key_here
HMAC_SECRET=your_hmac_secret_here

NODE_EXPORTER_URL=http://192.168.1.103:9100/metrics
